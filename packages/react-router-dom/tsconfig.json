{
  "files": ["index.tsx", "server.tsx"],
  "exclude": ["dist/**/*"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",

    "strict": true,
    "jsx": "react",

    "declaration": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true,

    "outDir": ".",
    "rootDir": ".",
    "paths": {
      "@arijs/react-router": ["../react-router/"],
      "@arijs/react-router-dom": ["../react-router-dom/"],
      "@arijs/remix-run-router": ["../router/"]
    }
  }
}
